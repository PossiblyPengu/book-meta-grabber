{
  "name": "book-meta-mobile",
  "version": "1.0.0",
  "description": "iOS metadata + cover grabber for books and audiobooks",
  "main": "index.js",
  "scripts": {
    "dev":        "vite",
    "build":      "vite build",
    "cap:sync":   "npx cap sync ios",
    "cap:open":   "npx cap open ios",
    "cap:run":    "npx cap run ios",
    "deploy":     "npm run build && npx cap sync ios && npx cap open ios",
    "test":       "echo \"No tests configured\" && exit 0",
    "lint":       "eslint . --ext .js --max-warnings=0",
    "lint:fix":   "eslint . --ext .js --fix",
    "format":     "prettier --write \"**/*.{js,css,md,json,html}\"",
    "ci":         "npm run lint && npm run build"
  },
  "dependencies": {
    "@capacitor/app":             "^5.0.0",
    "@capacitor/core":            "^5.0.0",
    "@capacitor/filesystem":      "^5.0.0",
    "@capacitor/haptics":         "^5.0.0",
    "@capacitor/preferences":     "^5.0.0",
    "@capacitor/browser":         "^5.0.0",
    "@capacitor-community/document-picker": "^5.0.0"
    ,
    "@ffmpeg/ffmpeg": "^0.11.8",
    "music-metadata-browser": "^2.5.10",
    "pdfjs-dist": "^4.0.379",
    "jszip": "^3.10.1",
    "browser-id3-writer": "^4.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.0.0",
    "@capacitor/ios": "^5.0.0",
    "vite":           "^5.0.0",
    "eslint":         "^8.50.0",
    "prettier":       "^2.8.8",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1"
  },
  "author": "Andrew",
  "engines": {
    "node": ">=18"
  },
  "license": "MIT"
}

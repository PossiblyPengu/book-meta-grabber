{
  "name": "book-meta-grabber",
  "version": "2.0.0",
  "description": "Web metadata + cover grabber for books and audiobooks",
  "type": "module",
  "scripts": {
    "dev":        "vite",
    "build":      "vite build",
    
    "test":       "echo \"No tests configured\" && exit 0",
    "lint":       "eslint . --ext .js --max-warnings=0",
    "lint:fix":   "eslint . --ext .js --fix",
    "format":     "prettier --write \"**/*.{js,css,md,json,html}\"",
    "ci":         "npm run lint && npm run build"
  },
  "dependencies": {
    "jszip": "^3.10.1",
    "pdfjs-dist": "^4.0.379",
    "music-metadata-browser": "^2.5.10",
    "browser-id3-writer": "^4.0.0"
  },
  "devDependencies": {
    "vite":           "^5.0.0",
    "eslint":         "^8.50.0",
    "prettier":       "^2.8.8",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1"
  },
  "author": "Andrew",
  "engines": {
    "node": ">=18"
  },
  "license": "MIT"
}
